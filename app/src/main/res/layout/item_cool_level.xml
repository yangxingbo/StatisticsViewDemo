<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_coldLevelLogo"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="30dp"
    android:layout_marginLeft="15dp"
    android:layout_gravity="left"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        style="@style/viewWrap"
        android:text="@string/cool_level" />

    <LinearLayout style="@style/coolLevelLl">

        <View
            style="@style/coolLevelView"
            android:background="@color/cool_light_blue" />

        <TextView
            style="@style/coolLevelView"
            android:text="@string/ten_men" />
    </LinearLayout>

    <LinearLayout style="@style/coolLevelLl">

        <View
            style="@style/coolLevelView"
            android:background="@color/cool_light_green" />

        <TextView
            style="@style/coolLevelView"
            android:text="@string/twenty_men" />
    </LinearLayout>

    <LinearLayout style="@style/coolLevelLl">

        <View
            style="@style/coolLevelView"
            android:background="@color/cool_orange" />

        <TextView
            style="@style/coolLevelView"

            android:text="@string/sixty_men" />
    </LinearLayout>

    <LinearLayout style="@style/coolLevelLl">

        <View
            style="@style/coolLevelView"
            android:background="@color/colorCroci" />

        <TextView
            style="@style/coolLevelView"
            android:text="@string/eighty_men" />
    </LinearLayout>

    <LinearLayout style="@style/coolLevelLl">

        <View
            style="@style/coolLevelView"
            android:background="@color/cool_red" />

        <TextView
            style="@style/coolLevelView"
            android:text="@string/one_hundred_men" />
    </LinearLayout>

</LinearLayout>